---
// ABOUTME: Base layout component for the Final Fantasy VIII Landing Page
// ABOUTME: Provides HTML structure, meta tags, global styles, and consistent page wrapper

import '@styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Final Fantasy VIII - Landing Page',
  description = 'Experience the epic story of Squall Leonhart and his journey through time and space in Final Fantasy VIII. Explore characters, gameplay mechanics, and the unforgettable world of this classic RPG.',
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />

    <title>{title}</title>

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <slot />
  </body>
</html>
